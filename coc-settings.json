{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "Markdown",
    "typescript", 
    "javascript", 
    "typescriptreact", 
    "javascriptreact", 
    "yaml", 
    "json", 
    "markdown", 
    "vim", 
    "rust", 
    "go", 
    "python",
    "html",
    "toml"
  ],
  "coc.preferences.formatOnInsertLeave": true,
  "coc.preferences.formatOnType": true,
  "languageserver": 
  {
    "intelephense": {
      "command": "intelephense",
      "args": ["--stdio"],
      "filetypes": ["php"],
      "initializationOptions": {
        "storagePath": "/tmp/intelephense"
      }
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        },
        "clang": {
          "resourceDir": "/Library/Developer/CommandLineTools/usr/lib/clang/11.0.0",
          "extraArgs": [
            "-isystem",
            "/Library/Developer/CommandLineTools/usr/include/c++/v1",
            "-I",
            "/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk/usr/include/"        
          ]
        }
      }
    }
  },
  "prettier.singleQuote": true,
  "prettier.trailingComma":"es5",
  "prettier.semi": false,
  "prettier.jsxSingleQuote": true,
  "prettier.arrowParens": "always",
  "prettier.printWidth": 80,
  "signature.floatMaxWidth": 100,
  "codeLens.enable": true,
  "codeLens.separator": "‚¨Ö",
  "suggest.noselect": true,
  "suggest.floatEnable": true,
  "suggest.enablePreselect": false,
  "suggest.numberSelect": false,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.displayByAle": false,
  "coc.preferences.enableFloatHighlight": true,
  "coc.preferences.hoverTarget": "float",
  "diagnostic.virtualText": true,
  "diagnostic.errorSign": "‚ùå",
  "diagnostic.infoSign": "üåü",
  "diagnostic.warningSign": "‚ö°",
  "diagnostic.messageTarget": "float",
  "diagnostic.level": "information",
  "diagnostic.locationlist": true,
  "diagnostic.checkCurrentLine": false,
  "diagnostic.highlightOffset": 1000,
  "diagnostic.virtualTextLineSeparator": "üîª",
  "diagnostic.virtualTextLines": 3,
  "diagnostic.hintSign": "‚ùî",
  "diagnostic.messageDelay": 500,
  "diagnostic.virtualTextPrefix": "üîß ",
  "go.enable": true,
  "go.goplsOptions": {
    "usePlaceholders": true,
    "completeUnimported": true,
    "hoverKind": "FullDocumentation",
    "completionDocumentation": true,
    "deepCompletion": true,
    "linkTarget": "",
    "fuzzyMatching": true
  },
  "signature.enable": true,
  "pairs.enableBackspace": true,
  "coc.source.ultisnips.priority": 100,
  "suggest.languageSourcePriority": 99,
  "diagnostic.enable": true,
  "vetur.format.enable": true,
  "vetur.validation.script": true,
  "vetur.useWorkspaceDependencies": true,
  "vetur.validation.template": true,
  "vetur.format.defaultFormatter.html": "prettier",
  "coc.source.emoji.filetypes": ["markdown"],
  "coc.source.file.ignoreHidden": false,
  "coc.source.emoji.priority": 1
}
